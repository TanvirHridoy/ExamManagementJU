@model SemesterWiseCourseView
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Print</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/admin/css/adminlte.min.css" rel="stylesheet" />
</head>
<style>
    .small, small {
        font-size: 61%;
        font-weight: 600;
    }

    .justify-content-between {
        -webkit-justify-content: space-between !important;
        -ms-flex-pack: justify !important;
        justify-content: space-between !important;
        display: none !important;
    }

    .sidebar {
        display: none !important;
    }

    .sticky-footer {
        display: none !important;
    }

    @@page {
        size: auto;
        margin: 0mm;
    }

    html {
        background-color: #FFFFFF;
        margin: 0mm;
    }

    body {
        padding: 30px;
    }

    li {
        list-style: none;
        font-weight: 600;
    }

    h4 {
        margin-bottom: 3px;
        font-weight: 900;
        font-size: 25px;
    }

    ul {
        margin: 0;
        padding: 0;
    }

    .admitcart {
        text-align: center;
    }

        .admitcart p {
            margin-bottom: 0px;
        }

    .form-control {
        display: block;
        width: 100%;
        height: calc(2.25rem + 11px) !important;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #5b5c5e !important;
        border-radius: 0rem;
        box-shadow: inset 0 0 0 transparent;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }
</style>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="admitcart">
                <p style="font-weight:600;font-size:25px">PMSCS PROGRAM </p>
                <p style="font-weight:500;font-size:20px">Department of Computer science & Engineering </p>
                <p style="font-weight:500;font-size:20px">Jahangirnagar University, sayar, Dhaka-1342, Bangladesh. </p>
                <p style="font-weight:600;font-size:25px;text-transform: uppercase;">SEMISTER FINAL EXAMINATION @Model.SemesterName </p>
                <p style="font-weight:800;font-size:45px;margin-bottom:10px;margin-top:10px">ADMIT CARD </p>
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-2 invoice-col" style="margin-top:10px">
                    <b>Student's name:</b>
                </div>
                <div class="col-sm-4 invoice-col">
                    <input value="@Model.Student.Name" class="form-control" />
                </div>
                <div class="col-sm-2 invoice-col" style="margin-top:10px">
                    <b>Batch:</b>
                </div>
                <div class="col-sm-4 invoice-col">
                    <input value="@Model.Student.Batch.BatchNo" class="form-control" />
                </div>
            </div>
            <div class="row invoice-info" style="margin-top:15px">
                <div class="col-sm-2 invoice-col" style="margin-top:10px">
                    <b>Class ID:</b>
                </div>
                <div class="col-sm-4 invoice-col">
                    <input value="@Model.Student.StudentId" class="form-control" />
                </div>
                <div class="col-sm-2 invoice-col" style="margin-top:10px">
                    <b>Semester:</b>
                </div>
                <div class="col-sm-4 invoice-col">
                    <input value="@Model.SemesterName" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-7">
                    <div style="margin-top:15px;"> <b style="border-bottom:2px solid #000"> Registered Courses: (Please give the tick marks)</b></div>

                    <div class="table-responsive" style="margin-top:15px">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th> Course Code </th>
                                    <th>Course Name</th>
                                    <th>Exam Date</th>
                                    <th>Exam Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.datalist.OrderBy(d => d.ExamDate))
                                {
                                    <tr>
                                        <td> @item.Course.CourseCode </td>
                                        <td> @item.Course.CourseName </td>
                                        <td>@item.Exam.ExamDate.Value.ToShortDateString() </td>
                                        <td>@item.Exam.ExamDate.Value.ToShortTimeString() </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-5" style="text-align:center;margin-top:150px">
                    <b>  Authorized Signature</b>
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>
        window.addEventListener("load", window.print());
    </script>
</body>
</html>




