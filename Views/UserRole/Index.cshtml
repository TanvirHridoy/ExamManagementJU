@model CertificationMS.Models.RoleFormViewModel
@{
    ViewData["Title"] = "Role";
}
<div class="page-body">
    <div class="row">
        <div class="col-md-6">
            @*<h4>Menu</h4>*@
        </div>
        <div class="col-md-6">
            @*<a href="#" class="btn btn-secondary float-right" id="addNewRole">Add New</a>*@
            <a asp-action="Create" asp-controller="UserRole" class="btn btn-secondary float-right" id="">Add New</a>
        </div>

    </div>
    <hr class="mt-2" />
    <div class="row">
        <div class="col-md-12">
            <table id="tableMenus" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                <thead style="background-color: #3f5c6c; color:#fff;text-align:center">
                    <tr>
                        <th>
                            Role Name
                        </th>

                        <th>
                            Description
                        </th>
                        <th>
                            Edit
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.RoleList != null)
                    {
                        foreach (var item in Model.RoleList)
                        {
                            <tr>
                                <td>
                                    @item.RoleName
                                </td>
                                <td>
                                    @item.Description
                                </td>

                                <td>
                                    @*<a role-id="@item.RoleId" class="btnUserRoleEdit" ><i class="fa fa-edit"></i></a>*@
                                    <a asp-route-role_id="@item.RoleId" asp-action="Edit" asp-controller="UserRole" class=""><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





@section Scripts {





}