@model EMSJu.ContextModels.Convocation

@{
    ViewData["Title"] = "EditConvocation";
}
<div class="card mb-4 col-md-6">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Edit Convocation</h6>
    </div>
    <div class="card-body">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" for="exampleInputEmail1">Convocation Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Year" for="exampleInputPassword1">Year</label>
                <input asp-for="Year" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramDate" for="exampleInputPassword1">Program Date</label>
                <input asp-for="ProgramDate" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ProgramDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" for="exampleInputPassword1">Status</label>
                <input asp-for="Status" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" asp-controller="Convocation" asp-action="Update" value="Update" class="btn btn-primary " />
            </div>
        </form>
    <div class="card-footer text-muted">
        <div>
            <a asp-action="List">Back to List</a>
        </div>
    </div>
</div>
</div>