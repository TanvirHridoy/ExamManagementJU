                <form method="post" asp-action="ApplyForCertificate" asp-controller="Home" asp-route-Data="@Model.Application">


                    <div class="col-3 float-right">
                        <div class="custom-file mt-5">
                            <input type="file" class="custom-file-input" asp-for="@Model.Application.ExtraOne" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose Photo</label>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div>
                        <div class="form-group row border-danger">
                            <label for="Name" class="col-sm-4 col-form-label">Name Of The Student</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" asp-for="@Model.Application.StudentName" id="Name">
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="StudentID" style="margin-left:15px;" class="col-sm-2 col-form-label">Id Full Form</label>
                        <div class="col-sm-5 " style="margin-left:86px;">
                            <input type="text" class="form-control" asp-for="@Model.Application.StudentId" id="StudentID">
                        </div>
                    </div>
                        <div class="form-group row">
                            <div class="col-sm-6 row">
                                <label for="ProgramID" style="margin-left:15px;" class="col-sm-2 col-form-label">Program</label>
                                <div class="col-sm-9">

                                    @*   @Html.DropDownListFor(m => m.DeptName, (SelectList)ViewBag.deplist, "Select", htmlAttributes: new { @class = "form-control" })*@

                                    <select style="margin-left:88px;" asp-for="@Model.Application.ProgramId" class="form-control  col-sm-10" id="ProgramID">
                                        @foreach (var item in Model.programLst)
                                        {
                                            <option value="@item.Id">@item.ProgramName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="ml-4">Did You Change Any Campus?</div>
                                    <div class="offset-md-1">
                                        <div class="form-check form-check-inline yes">
                                            <input class="form-check-input" type="radio" asp-for="@Model.Application.ChangeNubCampus" name="inlineRadioOptions" id="inlineRadio1" value="true">
                                            <label class="form-check-label" for="inlineRadio1">Yes</label>
                                        </div>
                                        <div class="form-check form-check-inline no ">
                                            <input class="form-check-input" type="radio" checked asp-for="@Model.Application.ChangeNubCampus" name="inlineRadioOptions" id="inlineRadio2" value="false">
                                            <label class="form-check-label" for="inlineRadio2">No</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <div>
                        
                        <br />
                        <div class="d-none invigible">
                            <div>
                                <div>
                                    <p>(If Yes,Then)</p>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <select style="margin-left:78px;" asp-for="@Model.Application.FromNubCampus" class="form-control col-sm-6" id="FromCampusID">
                                            @foreach (var item in Model.CampusLst)
                                            {
                                                <option value="@item.Id">@item.CampusName</option>
                                            }
                                        </select>
                                    </div>
                                    <div>Campus To</div>
                                    <div class="col">
                                        <select style="margin-left:78px;" asp-for="@Model.Application.ToNubCampus" class="form-control col-sm-6" id="ToCampusID">
                                        @foreach (var item in Model.CampusLst)
                                        {
                                            <option value="@item.Id">@item.CampusName</option>
                                        }
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-sm-6 row">
                                <div style="margin-left:15px;">StudentShip Information</div>
                                <div class="offset-sm-1">
                                    <div class="form-check form-check-inline yes">
                                        <input class="form-check-input" type="radio"checked="checked" asp-for="@Model.Application.StudentType" name="inlineRadioOptions" id="inlineRadio1" value="1">
                                        <label class="form-check-label" for="inlineRadio1">Regular</label>
                                    </div>
                                    <div class="form-check form-check-inline no ">
                                        <input class="form-check-input" type="radio"  asp-for="@Model.Application.StudentType" name="inlineRadioOptions" id="inlineRadio2" value="2">
                                        <label class="form-check-label" for="inlineRadio2">Credit Transfer</label>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <br />
                        <div>
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Lestest Contact Address</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="staticEmail">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Lestest Phone Number</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="staticEmail">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Major Subject</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="staticEmail">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class=" " style="background-color: #F6F9FE;">
                        <div class="card-header">
                            <h6 class="text-center">NB:Requirements for certificate:All Previous certificate money reciet and photo,provitional certificate is 1000tk(15working days),1500tk(7working days),2000tk(03working day).You Have To surrender Your Id Card</h6>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title text-primary">Before Collecting The Main Certificate</h4>

                            <p class="card-text">1.You Have To Surrender The Provisional Certificate(If Taken Erlier)</p>
                            <div class="row">
                                <div style="margin-left:17px;">2.Did You Register yourself for Covocation</div>
                                <div class=" offset-md-1">

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                        <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                                        <label class="form-check-label" for="inlineCheckbox2">No</label>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <p class="card-text">
                                <div class="form-group col-md-4">
                                    <label for="inputState"> 3.Mention The Convocation Number </label>
                                    <select style="margin-left:78px;" class="form-control col-sm-6" id="exampleFormControlSelect1">
                                        @foreach (var item in Model.convLst)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </p>
                            <p class="card-text">4.If you Were Not Registered For Convocation then you habe to submiot money receipt(fee of main certificate) </p>
                            <p class="card-text">5.You Have To Submit the Clearence Of Convocation Costume </p>
                            <p class="card-text">6.Registration Fee of Convoction will Detarmined by The Authority From Time To Time  </p>
                        </div>

                    </div>
                    <button type="button" class="btn btn-outline-primary offset-md-5 mb-5">Submit</button>
                    <button type="button" class="btn btn-outline-primary  mb-5">Reset</button>
                </form>
            </div>
         </div>
    </section><!-- End Skills Section -->

