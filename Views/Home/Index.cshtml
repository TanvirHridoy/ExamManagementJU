    ViewData["Title"] = "Home Page ";
}




<main id="main">


    
    <!-- ======= Skills Section ======= -->
    <section id="skills" class="skills  ">
        <div class="container border" style="background-color: #F6F9FE; " data-aos="fade-up">

            <div class=" skills-content frm_content ">
                <div class="text-center mt-4">
                    <div class="offset-md-1"><h3 style="color: #106EEA;">Requision Form for Accadamic Credential</h3></div>
                    <div class="offset-md-1"><h6>Transcript & Provisional/Main Certificate Of NUB</h6></div>


                </div>


                @*<div class="progress">
                        <span class="skill">HTML <i class="val">100%</i></span>
                        <div class="progress-bar-wrap">
