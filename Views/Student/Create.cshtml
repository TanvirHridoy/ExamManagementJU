@model EMSJu.ContextModels.StudentInfo

@{
    ViewData["Title"] = "Add Student";
}

<div class="card mb-4 col-md-6">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Campus</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.HiddenFor(m=>m.Id)
            <div class="form-group">
                <label asp-for="StudentId" for="exampleInputEmail1">Student ID</label>
                <input asp-for="StudentId" required placeholder="Enter Student ID" class="form-control"  aria-describedby="emailHelp">

                <span asp-validation-for="StudentId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" asp-action="Create" value="ADD" class="btn btn-primary" />
            </div>
        </form>
        <div class="card-footer text-muted">
            <div>
                <a asp-action="List">Back to List</a>
            </div>
        </div>
    </div>
</div>