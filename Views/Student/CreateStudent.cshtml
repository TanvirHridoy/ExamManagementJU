@model CertificationMS.Models.StudentCreateVm

@{
    ViewData["Title"] = "CreateStudent";
}

<h1>CreateStudent</h1>

<h4>StudentVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStudent" method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.StudentId" class="control-label"></label>
                <input asp-for="Student.StudentId" class="form-control" />
                <span asp-validation-for="Student.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Photo" class="control-label"></label>
                <input name="Student.Photo" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.ProgramId" class="control-label"></label>
                <select class="form-control" asp-for="Student.ProgramId" >
                    @foreach (var item in Model.Programs)
                    {
                        <option value="@item.Id"> @item.ProgramName</option>
                    }
                   
                </select>
                <span asp-validation-for="Student.ProgramId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.BatchId" class="control-label"></label>
                <select class="form-control" asp-for="Student.BatchId">
                    @foreach (var item in Model.BatchInfos)
                    {
                        <option value="@item.Id"> @item.BatchNo</option>
                    }

                </select>
                <span asp-validation-for="Student.BatchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit"  value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
