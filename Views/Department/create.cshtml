@model CertificationMS.ContextModels.Department

@{
    ViewData["Title"] = "create";
}

<div class="card mb-4 col-md-6">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Department</h6>
    </div>
    <div class="card-body">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="DeptName" for="exampleInputEmail1">Department Name</label>
                <input asp-for="DeptName" placeholder="Enter Department Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                <span asp-validation-for="DeptName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="DeptSname" for="exampleInputPassword1">Department Short Name</label>
                <input asp-for="DeptSname" placeholder="Enter Department Short Name" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="DeptSname" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" asp-action="Add" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="card-footer text-muted">
            <div>
                <a asp-action="List">Back to List</a>
            </div>
        </div>
    </div>
</div>