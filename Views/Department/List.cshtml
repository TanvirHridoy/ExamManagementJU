@model CertificationMS.Models.DepartmentViewModel

@{
    ViewData["Title"] = "Department";
}
@if (Model.message != String.Empty)
{
    <h2>@Model.message</h2>
}

<div class="row mb-3">
    <div class="col-sm-12 col-lg-12 mb-4">
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Departments</h6>
                <a class="m-0 float-right btn btn-success btn-sm" asp-action="create" >
                    Add New <i class="fas fa-plus"></i>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>Sl#</th>
                            <th>Department Name</th>
                            <th>Department Short Name</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int sl = 0; }
                        @foreach (var item in Model.deptlist)
                        {
                            sl = sl + 1;
                            <tr>
                                <td>@sl</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeptName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeptSname)
                                </td>
                                <td><a asp-action="EditDepartment" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a></td>
                                <td><a asp-action="DeleteDepartment" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>

</div>